@import url('http://fonts.googleapis.com/css?family=Muli|Open+Sans:300italic,400italic,600italic,400,300,600');

// declare some fonts
open = 'Open Sans', sans-serif;
muli = 'Muli', sans-serif;

// declare some colors 

// all of the blues whoa whoa whoa getting pretty crazy
blue = #006bb3
darkblue = #1b537b
bgblue = #164d73
minblue = #f6f8fa
fadedblue = #6496b9
darkfaded = #4a5963

lightgray = rgba(128, 128, 128, 0.5)

orange = #f26533
textorange = #ee5f12

// declare some font weights
normal = 400
light = 300
heavy = 600

/* MEDIA QUERY GUIDE 
Large devices — desktops, 1200px and up
Medium devices — desktops, 992px and up
Small devices — tablets, 768px and up
XS devices — less than 768px
*/



footer
	background-color #fff
	
	p
		font-family muli
		font-size 16px
		color #6d889a
		line-height 1.6
	ul.footernav
		margin 0
		padding 0

		li
			list-style none
			display inline-block
			margin 0
			padding 0
			font-family muli
			font-size 15px
			a
				color lightgray
				margin 0px 30px 5px 0
			&:hover
					color #6fdc6f
					text-decoration none
			&.footer_link
				a
					color textorange

// everything over 992px (medium screens)
@media handheld, screen and (min-width: 992px)
	footer
		h6
			font-size 16px /* trying to avoid a linebreak here... */

// everything over 1200px (large screens)
@media handheld, screen and (min-width: 1200px)
	footer
		h6
			font-size 20px /* this is the default size anyhow */
